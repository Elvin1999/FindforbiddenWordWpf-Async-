
<Window x:Class="FindForbiddenWordWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindForbiddenWordWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="SpringGreen">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Width="150" Height="40" Text="{Binding CurrentWord.Word,Mode=TwoWay}" FontSize="16" Background="White"></TextBox>
            <Button Width="120" Name="Add" Command="{Binding AddWordCommand}" Height="40" FontSize="16" Content="Add Word" Margin="50" Background="White"></Button>
            <Button Width="120" Name="Done" Command="{Binding DoneCommand}" Height="40" FontSize="18" Content="Done"  Background="White"></Button>
        </StackPanel>
    </Grid>
</Window>
